{
  "compilerOptions": {
    "noEmit": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "esnext",
    "strictNullChecks": true,
    "jsx": "preserve",
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node"
  },
  "include": ["./src/js/**/*"]
}
